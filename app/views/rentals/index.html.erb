<div class="container pt-3">
<h2 class="text-center mt-5 mb-5 font-weight-bold">貸出状況一覧</h2>
<table class="table">
      <thead>
        <tr>
          <th>貸出番号</th>
          <th>利用者</th>
          <th>書籍タイトル</th>
          <th>貸出日</th>
          <th>返却予定日</th>
          <th></th>
        </tr>
        </thead>
      <% @rentals.each_with_index do |r, i| %>
        <tbody>
          <td>
            <%= i + 1%>
          </td>
          <td>
            <%= r.user.name %>
        </td>
        <td>
          <%= r.book.title %>
        </td>
        <td>
          <%= r.rental_date.strftime("%Y年%m月%d日%H時%M分") %>
        </td>
        <td>
          <%= r.due_date.strftime("%Y年%m月%d日%H時%M分") %>
        </td>
        <td>
          <% if r.user_id == current_user.id %>
          <%= link_to book_rental_path(r.book_id, current_user), method: :delete, local: true do %>
            返却する
          <% end %>
          <% end %>
        </td>
      </tbody>
      <% end %>
    </table>
</div>