<div class="container">
<div class="col-md-8 offset-md-2 pt-5">
<h2 class="text-center mt-5 pt-5">ログイン</h2>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <% flash.each do |key, value| %>
    <div class="alert alert-danger alert-dismissible">
      <button class="close" data-dismiss="alert">&times;</button>
      <span class="alert alert-<%= key %>",style="border: none;"><%= value %></span>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", style:"background-color:#7b9ad0; color: white;",class:"btn w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>