<%= render "layouts/flash" %>
  <div class="col-md-12 pt-3">
    <h2 class="text-center mt-5 font-weight-bold">ユーザー一覧</h2>
  </div>
<div class="container mt-5">
<ul class="nav nav-tabs text-center bg-light mb-3" id="myTab" role="tablist">
  <li class="nav-item w-50">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">全ユーザー</a>
  </li>
  <li class="nav-item w-50">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">利用中のユーザー</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <div class="row d-flex">
  <% @users.each do |u| %>
    <div class="col-lg-2 col-md-4 col-sm-6 col-6 mt-2 mb-2 text-center">
    <div class="border rounded pt-3 pb-3">
      <%= link_to user_path(u) do %>
        <%= attachment_image_tag u, :image, class:"rounded-circle mb-2", size:"100x100", fallback:"no_image_icon.jpg"%> <br>
        <%= u.name %> <br>
        <%= u.email %> <br>
        貸出数:<%= u.rentals.size %>
      <% end %>
    </div>
    </div>
  <% end %>
  </div>
  </div>
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
  <div class="row d-flex">
  <% @users.each do |u| %>
   <% if u.rentals.exists? %>
    <div class="col-lg-2 col-md-4 col-sm-6 col-6 mt-2 mb-2 text-center">
    <div class="border rounded">
      <%= link_to user_path(u) do %>
        <%= attachment_image_tag u, :image, class:"rounded-circle", size:"100x100", fallback:"no_image_icon.jpg"%> <br>
        <%= u.name %> <br>
        <%= u.email %> <br>
        貸出数:<%= u.rentals.size %>
      <% end %>
    </div>
    </div>
  <% end %>
  <% end %>
  </div>
  </div>
</div>
</div>