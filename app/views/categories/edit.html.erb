<div class="container">
  <div class="col-md-8 offset-md-2 pt-3">
  <h2 class="text-center mt-5 font-weight-bold">カテゴリー編集</h2>
  <%= form_with model: @category, local: true do |f| %>
    <% flash.each do |key, value| %>
      <div class="alert alert-danger alert-dismissible">
        <button class="close" data-dismiss="alert">&times;</button>
        <span class="alert alert-<%= key %>",style="border: none;"><%= value %></span>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :カテゴリー名 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "email" , class:"form-control"%>
    </div>
    <div class="actions">
      <%= f.submit "更新",class:"btn btn-success w-100" %>
    </div>
  <% end %>
</div>