<div class="d-flex">
  <div class="col-md-12 pt-3">
    <h2 class="text-center mt-5 font-weight-bold">書籍一覧</h2>
    <div class="container pt-5">
      <div class="mb-5">
        <%= render "books/search"%>
      </div>
     <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item w-50 text-center">
        <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">貸出可能書籍</a>
      </li>
      <li class="nav-item w-50 text-center">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">貸出中</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="d-flex flex-wrap">
          <% @books.each do |b| %>
            <% if b.stock_num > 0 %>
              <div class="book-lists col-xl-2 col-md-2 col-sm-3 col-4 mt-3 text-center">
                <%= link_to book_path(b) do %>
                  <% if b.image_url.nil? %>
                    <img src="/assets/no_image.png" width="120" vspace="2">
                  <% else %>
                   <img src="<%= b.image_url %>" width="120" vspace="2">
                   <% end %>
                  <div class="title-area mx-auto">
                    <%= b.title.truncate(20) %>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
        <div class="d-flex flex-wrap">
          <% @books.each do |b| %>
            <% if b.stock_num == 0 %>
              <div class="book-lists col-xl-2 col-md-2 col-sm-3 col-4 mt-3 text-center">
                <%= link_to book_path(b) do %>
                  <% if b.image_url.nil? %>
                    <img src="/assets/no_image.png" width="40" vspace="2">
                  <% else %>
                   <img src="<%= b.image_url %>" width="40" vspace="2">
                   <% end %>
                  <div class="title-area mx-auto">
                    <%= b.title.truncate(20) %>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
  </div>
</div>