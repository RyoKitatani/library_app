<div class="d-flex">
  <div class="col-md-12">
    <h2>書籍一覧</h2>
     <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item w-50 text-center">
        <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">貸出可能書籍</a>
      </li>
      <li class="nav-item w-50 text-center">
        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">貸出中</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="d-flex flex-wrap">
          <% @books.each do |b| %>
          <% if b.stock_num > 0 %>
            <div class="book-lists col-xl-2 col-md-2 col-sm-3 col-4 mt-3 text-center">
              <%= link_to book_path(b) do %>
                  <%= attachment_image_tag b, :image, width: "120px", height:"170px", format: 'jpeg', fallback:"no_image.png", class:"book-img" %>
                <div class="title-area mx-auto">
                  <%= b.title %>
                </div>
              <% end %>
            </div>
          <% end %>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
        <div class="d-flex flex-wrap">
          <% @books.each do |b| %>
          <% if b.stock_num == 0 %>
            <div class="col-lg-2 col-md-4 col-sm-6 col-6 border rounded mt-2">
              <%= link_to book_path(b) do %>
                <div>
                  <%= b.title %>
                </div>
                <div>
                  <%= attachment_image_tag b, :image, width: "100%", height:"100%", format: 'jpeg', fallback:"no_image.png" %>
                </div>
                <div>
                  <%= b.rental_status %>
                </div>
              <% end %>
            </div>
          <% end %>
          <% end %>
        </div>
      </div>
      </div>
</div>