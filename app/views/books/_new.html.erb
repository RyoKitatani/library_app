<%= form_with model: book, local: true do |f| %>
  <%= render "layouts/error_messages", resource: book %>
  <table>
  <div class="form-group" class="form-group">
    <th><%= f.label :タイトル %></th>
    <td><%= f.text_field :title, class:"form-control", placeholder:"書籍のタイトルを入力してください。"%></td>
  </div>
  <div class="form-group">
    <th><%= f.label :ISBN番号 %></th>
    <td><%= f.text_field :isbn, class:"form-control", placeholder:"13桁で入力。"%></td>
  </div>
  <div class="form-group">
    <%= f.label :書籍画像 %>
    <%= f.attachment_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :著者 %>
    <%= f.text_field :author, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :出版者 %>
    <%= f.text_field :publisher, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :出版月 %>
    <%= f.datetime_select :published_date %>
  </div>
  <div class="form-group">
    <%= f.label :カテゴリー %>
    <%= f.collection_select :category_id, Category.all, :id, :name, include_blanck: "選択してください"%>
  </div>
  <div class="form-group">
    <%= f.label :容量・ページ数 %>
    <%= f.text_field :volume, class:"form-control", placeholder:"ページ数を入力してください。"%>
  </div>
  <div class="form-group">
    <%= f.label :部数 %>
    <%= f.text_field :stock_num, class:"form-control", placeholder:"何冊ありますか？"%>
  </div>
  <div class="form-group">
    <%= f.submit "書籍登録", class:"btn btn-primary"%>
  </div>
  </table>
<% end %>
