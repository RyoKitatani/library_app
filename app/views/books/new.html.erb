<h2>書籍登録</h2>
<%= form_with model: @book, method: :post, local: true do |f| %>
  <%= render "layouts/error_messages", resource: @book %>
  <table>
  <div class="form-group" class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class:"form-control", placeholder:"書籍のタイトルを入力してください。"%>
  </div>
  <div class="form-group">
    <%= f.label :ISBN番号 %>
    <%= f.text_field :isbn, class:"form-control", placeholder:"13桁で入力。"%>
  </div>
  <div class="form-group">
    <%= f.label :書籍画像 %> <br>
    <%= f.attachment_field :image %>
  </div>
  <div class="form-row mb-3">
    <div class="col-md-6">
    <%= f.label :著者 %>
    <%= f.text_field :author, class:"form-control" %>
    </div>
    <div class="col-md-6">
    <%= f.label :出版者 %>
    <%= f.text_field :publisher, class:"form-control" %>
    </div>
  </div>
  <div class="form-row mb-3">
    <div class="col-md-3">
      <%= f.label :出版月 %> <br>
      <%= f.date_select :published_date, use_month_numbers: true, discard_day: true, start_year: 1900, end_year: Time.now.year,class:"form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :カテゴリー %> <br>
      <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "選択してください", class:"form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :容量・ページ数 %>
      <%= f.text_field :volume, class:"form-control", size: "30", placeholder:"ページ数を入力"%>
    </div>
    <div class="col-md-3">
      <%= f.label :部数 %>
      <%= f.text_field :stock_num, class:"form-control", placeholder:"何冊ありますか？"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "書籍登録", class:"btn btn-primary"%>
  </div>
  </table>
<% end %>

